{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "strict": true,
      "declaration": true,
      "emitDeclarationOnly": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Bundler",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "outDir": "dist",
      "resolveJsonModule": true
    },
    "include": ["src/**/*"]
  }
  